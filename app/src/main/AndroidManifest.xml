<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.ctddev.katununa.rss_reader_hw6" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name=".DescriptionActivity"
            android:label="@string/title_activity_description" >
        </activity>

        <service
            android:name=".FeedFetchingService"
            android:exported="false" >
        </service>

        <provider
            android:name=".FeedContentProvider"
            android:authorities="ru.ifmo.ctddev.katununa.rss_reader_hw6.feeds"
            android:enabled="true">
        </provider>

        <activity
            android:name=".ChannelsActivity"
            android:label="@string/title_activity_channels" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
